@model WP_project.Models.Course

@{
    ViewData["Title"] = "Manage Prerequisites";
}

<h1>Manage Prerequisites for @Model.Code</h1>
<h4>@Model.Title</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <h5>Current Prerequisites</h5>
        @if (Model.Prerequisites.Any())
        {
            <ul class="list-group mb-3">
                @foreach (var prereq in Model.Prerequisites)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @prereq.RequiredCourse.Code - @prereq.RequiredCourse.Title
                        <form asp-action="RemovePrerequisite" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@prereq.PrerequisiteId" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No prerequisites assigned.</p>
        }
    </div>

    <div class="col-md-6">
        <h5>Add Prerequisite</h5>
        <form asp-action="AddPrerequisite" method="post">
            <input type="hidden" name="CourseId" value="@Model.CourseId" />
            <div class="input-group mb-3">
                <select name="RequiredCourseId" class="form-select" asp-items="ViewBag.AvailableCourses">
                    <option value="">-- Select Course --</option>
                </select>
                <button class="btn btn-success" type="submit">Add</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

