@using WP_project.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow" style="max-width: 450px; margin: 0 auto;">
            <div class="card-body p-5">
                <div class="text-center mb-5">
                    <div style="font-size: 3.5rem; margin-bottom: 1.5rem;">ðŸŽ“</div>
                    <h2 class="gradient-text mb-3" style="font-size: 2rem; font-weight: 700;">Welcome Back</h2>
                    <p style="color: var(--text-muted); font-size: 1rem;">Sign in to access your portal</p>
                    <div class="mt-3" style="height: 3px; width: 60px; background: var(--gradient-primary); margin: 0 auto; border-radius: 2px;"></div>
                </div>
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="form-floating mb-4">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="font-size: 1rem;" />
                        <label asp-for="Email" style="font-weight: 600;">ðŸ“§ Email Address</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-4">
                        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" style="font-size: 1rem;" />
                        <label asp-for="Password" style="font-weight: 600;">ðŸ”’ Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-check mb-5">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="rememberMe" style="width: 1.2rem; height: 1.2rem;">
                        <label class="form-check-label ms-2" for="rememberMe" style="font-weight: 500; font-size: 1rem;">
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <strong>Sign In</strong>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

