@model WP_project.Models.CourseOffering

@{
    ViewData["Title"] = "Delete Offering";
}

<h1>Delete Class Offering</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Course.Code - @Model.Semester.Name</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Instructor
        </dt>
        <dd class = "col-sm-10">
            @Model.Instructor.Name
        </dd>
        <dt class = "col-sm-2">
            Section
        </dt>
        <dd class = "col-sm-10">
            @Model.Section
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CourseOfferingId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

