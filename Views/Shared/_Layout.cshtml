<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - University MIS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WP_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <button class="sidebar-toggle d-lg-none" type="button" id="sidebarToggle">
                    <span>☰</span>
                </button>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <strong>University Portal</strong>
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <div class="app-container">
        @if (User.Identity.IsAuthenticated)
        {
            <partial name="_Sidebar" />
            <div class="main-content">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
                <footer class="footer text-muted mt-5">
                    <div class="container-fluid">
                        &copy; 2025 - <strong>University Portal</strong> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </footer>
            </div>
        }
        else
        {
            <div class="main-content no-sidebar">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
                <footer class="footer text-muted mt-5">
                    <div class="container-fluid">
                        &copy; 2025 - <strong>University Portal</strong> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </footer>
            </div>
        }
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
