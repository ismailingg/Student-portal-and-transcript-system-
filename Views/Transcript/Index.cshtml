@model WP_project.Models.TranscriptViewModel

@{
    ViewData["Title"] = "Academic Transcript";
}

<div class="transcript-container">
    <div class="transcript-header mb-5">
        <div class="text-center">
            <h1 class="mb-2" style="font-size: 2.5rem; font-weight: 800;">Official Academic Transcript</h1>
            <p class="lead" style="color: var(--text-muted);">University Management System</p>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="student-info">
                        <div class="info-row">
                            <span class="info-label">Student Name:</span>
                            <span class="info-value">@Model.StudentName</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Roll Number:</span>
                            <span class="info-value">@Model.RollNumber</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="cgpa-display">
                        <span class="cgpa-label">CGPA</span>
                        <span class="cgpa-value badge bg-success">@Model.CGPA.ToString("F2")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Warning != null)
    {
        <div class="alert alert-warning mb-4">
            <strong>Notice:</strong> @ViewBag.Warning
        </div>
    }
    else if (Model.Semesters.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <div style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.5;">ðŸ“‹</div>
                <h4 style="color: var(--text-muted);">No graded academic records found.</h4>
            </div>
        </div>
    }
    else
    {
        @foreach (var semester in Model.Semesters)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold" style="font-size: 1.1rem;">@semester.SemesterName</span>
                        <span class="badge bg-primary">Semester GPA: @semester.SemesterGPA.ToString("F2")</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 15%;">Code</th>
                                    <th>Course Title</th>
                                    <th class="text-center" style="width: 12%;">Credits</th>
                                    <th class="text-center" style="width: 12%;">Grade</th>
                                    <th class="text-center" style="width: 12%;">Points</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in semester.Courses)
                                {
                                    <tr>
                                        <td><strong>@course.Code</strong></td>
                                        <td>@course.Title</td>
                                        <td class="text-center">@course.Credits</td>
                                        <td class="text-center">
                                            <span class="badge bg-primary">@course.Grade</span>
                                        </td>
                                        <td class="text-center">@course.Points.ToString("F1")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    
        <div class="text-center mt-5 no-print">
            <button onclick="window.print()" class="btn btn-primary btn-lg">
                ðŸ“„ Download / Print PDF
            </button>
        </div>
    }
</div>

<style>
    .transcript-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .student-info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    
    .info-row {
        display: flex;
        gap: 1rem;
        align-items: center;
    }
    
    .info-label {
        font-weight: 600;
        color: var(--text-secondary);
        min-width: 140px;
    }
    
    .info-value {
        color: var(--text-primary);
        font-weight: 500;
    }
    
    .cgpa-display {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 0.5rem;
    }
    
    .cgpa-label {
        font-size: 0.875rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .cgpa-value {
        font-size: 2rem;
        padding: 0.75rem 1.5rem;
    }
    
    @@media print {
        .no-print { display: none; }
        header, footer, .sidebar { display: none !important; }
        body { margin: 0; padding: 20px; background: white; }
        .main-content { margin-left: 0 !important; }
        .transcript-container { max-width: 100%; }
        .card { border: 1px solid #ddd; box-shadow: none; }
        .card-header { background: #f8f9fa !important; color: #000 !important; }
        .table thead { background: #f8f9fa !important; color: #000 !important; }
    }
    
    @@media (max-width: 768px) {
        .info-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.25rem;
        }
        
        .cgpa-display {
            align-items: flex-start;
            margin-top: 1rem;
        }
    }
</style>

