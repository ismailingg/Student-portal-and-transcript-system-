@model WP_project.Models.CourseOffering

@{
    ViewData["Title"] = "Schedule Class";
}

<h1>Schedule Class</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="SemesterId" class="control-label">Semester</label>
                <select asp-for="SemesterId" class ="form-control" asp-items="ViewBag.SemesterId"></select>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CourseId" class="control-label">Course</label>
                <select asp-for="CourseId" class ="form-control" asp-items="ViewBag.CourseId"></select>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="InstructorId" class="control-label">Instructor</label>
                <select asp-for="InstructorId" class ="form-control" asp-items="ViewBag.InstructorId"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Section" class="control-label">Section (e.g. A, B)</label>
                <input asp-for="Section" class="form-control" />
                <span asp-validation-for="Section" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" value="40" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Schedule" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

