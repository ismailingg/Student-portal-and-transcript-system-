@model IEnumerable<WP_project.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="CreateStudent" class="btn btn-success">Register New Student</a>
    <a asp-action="CreateFaculty" class="btn btn-info text-white">Register New Faculty</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Linked Profile</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    @if (user.Role == "Admin") { <span class="badge bg-danger">Admin</span> }
                    else if (user.Role == "Faculty") { <span class="badge bg-info text-dark">Faculty</span> }
                    else { <span class="badge bg-success">Student</span> }
                </td>
                <td>
                    @if (user.Role == "Student" && user.Student != null)
                    {
                        <span>Roll: @user.Student.RollNumber</span>
                    }
                    else if (user.Role == "Faculty" && user.Faculty != null)
                    {
                        <span>Dept ID: @user.Faculty.DepartmentId</span>
                    }
                    else if (user.Role == "Admin")
                    {
                        <span>Super User</span>
                    }
                    else 
                    {
                        <span class="text-danger">Unlinked</span>
                    }
                </td>
                <td>Active</td>
                <td>
                    <a asp-action="ChangePassword" asp-route-id="@user.Id" class="btn btn-sm btn-warning">
                        ðŸ”‘ Change Password
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

